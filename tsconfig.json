{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "es6",
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "lib"
  },
  "files": [
    "src/index.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  }
}
