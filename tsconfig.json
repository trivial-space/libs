{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "es6",
    "allowJs": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "lib"
  },
  "files": ["src/index.ts", "gl-matrix.d.ts"],
  "exclude": [
    "node_modules",
    "spec"
  ],
  "compileOnSave": false,
  "buildOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  }
}
